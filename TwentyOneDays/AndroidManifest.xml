<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.famo.twentyonedays"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0"
    android:anyDensity="true" >
    

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.DetailActivity" >
        </activity>
        <activity android:name=".ui.AdditionActivity" >
        </activity>
        <activity
            android:name=".ui.CalendarActivity"
            android:theme="@style/DialogTheme" >
            <intent-filter>
                <action android:name="android.intent.action.PICK" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.dir/vnd.famo.android.calendar.date" />
            </intent-filter>
        </activity>

        <service android:name=".services.ReminderService" />
        <service android:name=".services.PushService" />

        <receiver android:name=".receiver.ReminderReceiver" >
            <intent-filter>
                <action android:name="com.famo.action.reminder" />
            </intent-filter>
        </receiver>
        <!-- 测试 -->
        <uses-library android:name="android.test.runner" />
    </application>
    <!-- 测试 -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.famo.twentyonedays" >
    </instrumentation>

</manifest>